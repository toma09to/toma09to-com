---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getBlogs, getBlogDetail } from '../../library/microcms';

import { load } from "cheerio";
import hljs from "highlight.js";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

// 記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);

// Syntax highlighting
const $ = load(blog.content);
$("pre code").each((_, elm) => {
  const lang = $(elm).attr("class").replace("language-", "");
  const result = hljs.highlight($(elm).text(), {language: lang});
  $(elm).html(result.value);
  $(elm).addClass("hljs");
});
blog.content = $.html();
---

<style>
  .category a {
    border-radius: 0.5rem;
    background-color: #dddddd;
    padding: 0 1rem;
    color: black;
  }
  article {
    text-align: left;
  }
</style>

<BaseLayout title={blog.title}>
  <div class="category">
    <a href={"category/" + blog.category.id}>{blog.category.name}</a>
  </div>
  <h1>{blog.title}</h1>
  <time>{new Date(blog.publishedAt).toLocaleString()}</time>
  <hr>
  <article set:html={blog.content}></article>
</BaseLayout>
