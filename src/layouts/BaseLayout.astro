---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Blinder from '../components/Blinder.astro';
import '../styles/global.css';
import '../styles/base16-default-light.css';

const { title } = Astro.props;
const isTopPage = Astro.url.pathname === "/";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={Astro.url.origin + "images/ogp_image.png"} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="toma09toが制作したホームページ" />
    <meta property="og:site_name" content="toma09to.com" />
    <meta property="og:type" content={isTopPage ? "website" : "article"} />
    <meta property="og:url" content={Astro.request.url} />
    <meta property="og:locale" content="ja_JP" />
    <meta name="twitter:card" content="summary" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="content">
      <slot />
    </div>
    <Footer />
    <Blinder />
    <script>
      import '../scripts/menu.ts';
    </script>
  </body>
</html>
